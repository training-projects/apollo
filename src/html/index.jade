extends includes/_template.jade

block content

  //- Main Frame
  section.frame.main-frame#home

    //- Main Header
    header.main-header

      div.toggle-menu
        h3.title Menu
        span.togglebutton

      div.header-content
        span.togglebutton

        h1.title Apollo

        nav.main-navigation
          h2.title Main Navigation

          ul.menu-list
            li.menu: a.link(href="#home") Home
            li.menu: a.link(href="#about") About
            li.menu: a.link(href="#largeslideshow") Large Slideshow
            li.menu: a.link(href="#photos") Photos
            li.menu: a.link(href="#smallslideshow") Small Slideshow
            li.menu: a.link(href="#contact") Contact

        footer.main-footer
          p.copy &copy; 2016 Apollo.

    .content-wrapper
      div.text-box
        h2.title Apollo
          span.lighttext  Photographer UI Design
        p.description
          | Lorem ipsum dolor sit amet, consectetur adipisicing elit,
          | sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut
          | enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi
          | ut aliquip ex ea commodo consequat. Duis aute irure dolor in
          | reprehenderit in voluptate velit esse cillum dolore.
      img.photo(src="assets/images/photo-back.png" alt="John Apollo Picture")


  //- About Frame
  section.frame.about-frame#about
    .content-wrapper
      img.photo(src="assets/images/photo-camera.png" alt="Camera Picture")
