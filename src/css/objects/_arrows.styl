// Reset Bootstrap Definitions
.carousel-control.left
.carousel-control.right
  z-index: 3
  display: block
  width: auto
  height: 40px
  padding: 0.2em
  margin-top: 25%
  background-image: none
  background-color: #fff
  opacity: 1

  /* @media 768px */
  @media (min-width: 768px)
    margin-top: 28%
    height: 64px
    padding: 0.8em

  /* @media 1366px */
  @media (min-width: 1366px)
    margin-top: 20%

  /* @media 1440px */
  @media (min-width: 1440px)
    margin-top: 30%


.carousel-control.left
  margin-left: 0.8em
.carousel-control.right
  margin-right: 0.8em

.back
.next
  display: block
  width: 32px
  height: 32px

.back
  background-image: url('../images/back.png')
.next
  background-image: url('../images/next.png')
