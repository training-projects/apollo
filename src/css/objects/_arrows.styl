// Reset Bootstrap Definitions
.carousel-control.left
.carousel-control.right
  display: block
  width: auto
  height: 40px
  padding: 0.2em
  margin-top: 25%
  background-image: none
  background-color: #fff
  opacity: 1

.carousel-control.left
  margin-left: 0.5em
.carousel-control.right
  margin-right: 0.5em

.back
.next
