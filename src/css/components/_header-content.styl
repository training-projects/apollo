.header-content
  z-index: 4
  position: fixed
  top: 0
  right: 0
  bottom: 0
  width: 70%
  padding-right: 2.5em
  text-align: right
  color: color_lightgray
  background-color: #000
  box-shadow: -1em 0 5em #555
  transform: translateX(120%)
  transition: all 0.5s

  /* @media 768px */
  @media (min-width: 768px)
    width: 40%

  /* @media 1024px */
  @media (min-width: 1024px)
    width: 25%

  > .togglebutton
    display: block
    float: left
    width: 16px
    height: 16px
    margin: 1em
    background-image: url('../images/close.png')
    cursor: pointer

  > .main-navigation

    > .title
      display: none

    > .menu-list
      margin-bottom: 2.5em

      > .menu
        &:not(:last-child)
          margin-bottom: 0.5em

        > .link
          set_font-size(18px)
          color: steelblue

          &:hover
            text-decoration: none
            color: color_lightgray

.open
  transform: translateX(0)
